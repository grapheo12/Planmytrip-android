<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.planmytrip.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_hotel"
        android:name="com.example.planmytrip.ui.hotel.HotelFragment"
        android:label="@string/menu_hotel"
        tools:layout="@layout/fragment_hotel" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.planmytrip.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.planmytrip.ui.blog.ItemFragment"
        android:label="Blogs and Travelogues"
        tools:layout="@layout/fragment_blog" />

    <fragment
        android:id="@+id/map"
        android:name="com.example.planmytrip.MapsFragment"
